pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        S3_BUCKET = 'stu-ptl-dev-use-frontend'
    }

    stages {

        stage('Download Build Artifacts') {
            steps {
                copyArtifacts(
                    projectName: 'student_frontendci',
                    selector: lastSuccessful()
                )
            }
        }

        stage('Deploy to S3') {
            steps {
                withCredentials([
                    [$class: 'AmazonWebServicesCredentialsBinding',
                     credentialsId: 'Adithya']
                ]) {
                    sh '''
                        aws s3 sync front-end/build/ s3://$S3_BUCKET --delete
                    '''
                }
            }
        }

        stage('Print Website URL') {
            steps {
                sh '''
                    echo "======================================="
                    echo "Frontend URL:"
                    echo "http://$S3_BUCKET.s3-website-$AWS_DEFAULT_REGION.amazonaws.com"
                    echo "======================================="
                '''
            }
        }
    }

    post {
        success {
            echo 'üöÄ CD Deployment successful'
        }
        failure {
            echo '‚ùå CD Deployment failed'
        }
    }
}